<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:msa="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="avalonia_test.Views.LiveDatasource">
    <StackPanel Margin="5">
        <TextBox Classes="outline dense" UseFloatingWatermark="True" msa:TextFieldAssist.Label="Host" />
        <TextBox Classes="outline dense" UseFloatingWatermark="True" msa:TextFieldAssist.Label="Username" />
        <TextBox Classes="outline dense revealPasswordButton" PasswordChar="•" UseFloatingWatermark="True"
                 msa:TextFieldAssist.Label="Password" />
        <TextBox Classes="outline dense" UseFloatingWatermark="True" msa:TextFieldAssist.Label="Database" />
    </StackPanel>
</UserControl>